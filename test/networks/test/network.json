                "temp_1": "uint8",
                "temp_2": "uint8",
                "temp_3": "uint8",
                "temp_4": "uint8",
                "temp_5": "uint8",
                "temp_6": "uint8"
            }
        },
        {
            "name": "HV_CELL_BALANCING_STATUS",
            "topic": "HANDCART",
            "priority": 5,
            "sending": ["BMS_HV"],
