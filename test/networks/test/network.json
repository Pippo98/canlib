        {
            "name": "SET_CELL_BALANCING_STATUS",
            "topic": "BMS_HV",
            "priority": 5,
            "sending": ["HANDCART"],
            "receiving": ["BMS_HV"],
            "description": "Set cell balancing status; only once",
            "contents": {
                "set_balancing_status": "Toggle"
            }
        },
        {
            "name": "HANDCART_STATUS",
            "topic": "BMS_HV",
            "priority": 4,
            "sending": ["HANDCART"],
            "receiving": ["BMS_HV"],
            "description": "Sends updates on the presence of the handcart",
