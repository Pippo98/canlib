        },
        {
            "name": "SET_TS_STATUS",
            "topic": "BMS_HV",
            "priority": 7,
            "sending": ["DAS", "HANDCART"],
            "receiving": ["BMS_HV"],
            "description": "Requests a TS status; only once",
            "contents": {
                "ts_status_set": "Toggle"
            }
        },
        {
            "name": "STEER_STATUS",
            "topic": "DAS",
            "priority": 6,
            "sending": ["STEER"],
            "receiving": ["DAS"],
            "description": "Send update of the tuneable values from the steering wheel",
            "interval": 100,
            "contents": {
                "traction_control": "TractionControl",
                "map": "Map"
            }
        },
        {
            "name": "SET_CAR_STATUS",
            "topic": "DAS",
            "priority": 4,
            "sending": ["STEER"],
            "receiving": ["DAS"],
            "description": "Ask to DAS to change car status; only once",
            "contents": {
                "car_status_set": "SetCarStatus"
            }
        },
        {
            "name": "SET_PEDALS_RANGE",
            "topic": "DAS",
            "priority": 3,
            "sending": ["STEER"],
            "receiving": ["DAS"],
            "description": "Ask to calibrate pedals and steer in x_START, x_END steps; only once",
            "contents": {
                "bound": "Bound",
                "pedal": "Pedal"
            }
        },
        {
            "name": "CAR_STATUS",
            "topic": "STEER",
            "priority": 5,
            "sending": ["DAS"],
            "receiving": ["STEER"],
            "description": "Car status, all states managed by the DAS will be send (car status, inverters status)",
            "interval": 100,
            "contents": {
                "inverter_l": "InverterStatus",
                "inverter_r": "InverterStatus",
                "car_status": "CarStatus"
            }
        },
        {
            "name": "DAS_ERRORS",
            "topic": "STEER",
            "priority": 7,
            "sending": ["DAS"],
            "receiving": ["STEER"],
            "description": "DAS errors messages",
            "interval": 20,
            "contents": {
                "das_error": "DasErrors"
            }
        },
        {
            "name": "LV_CURRENT",
            "topic": "DASnSTEER",
            "priority": 4,
            "sending": ["BMS_LV"],
            "receiving": ["DAS", "STEER"],
            "description": "Current of LV battery pack: total current taken from the battery itself",
            "interval": 500,
            "contents": {
                "current": "uint8"
            }
        },
        {
            "name": "LV_VOLTAGE",
            "topic": "DASnSTEER",
            "priority": 4,
            "sending": ["BMS_LV"],
            "receiving": ["DAS", "STEER"],
            "description": "Voltages of LV battery pack: total voltage 16 bit [12,17.2]V (0x0000 under_voltage,0xFFFF over_voltage), 4x single cell voltage 8bit [3,4.2]V 0.005mV/bit (no additional info, 0x000 is 3V 0xFFFF is 4.2V)",
            "interval": 200,
            "contents": {
                "total_voltage": "uint16",
                "voltage_1": "uint8",
                "voltage_2": {
                    "type": "float32",
                    "range": [0, 5],
                    "precision": 0.001,
                    "optimize": true
                },
                "voltage_3": {
                    "type": "float32",
                    "range": [0, 5],
                    "precision": 0.001,
                    "optimize": false
                },
                "voltage_4": {
                    "type": "float32",
                    "range": [0, 5],
                    "force": "uint8"
                }
            }
        },
        {
            "name": "LV_TEMPERATURE",
            "topic": "DASnSTEER",
            "priority": 4,
            "sending": ["BMS_LV"],
            "receiving": ["DAS", "STEER"],
            "description": "Temperature of LV battery pack,[0,80]Celsius, uint8 0.32C/bit. battery pack and dcdc converter",
            "interval": 200,
            "contents": {
                "bp_temperature": "uint8",
                "dcdc_temperature": "uint8"
            }
        },
        {
            "name": "COOLING_STATUS",
            "topic": "DASnSTEER",
            "priority": 4,
            "sending": ["BMS_LV"],
            "receiving": ["DAS", "STEER"],
            "description": "Percentage value 0% to 100% of bms_hv_fans, bms_lv_fans, pump_speed, 8bit",
            "interval": 1000,
            "contents": {
                "hv_fan_speed": "uint8",
                "lv_fan_speed": "uint8",
                "pump_speed": "uint8"
            }
        },
        {
            "name": "MARKER",
            "topic": "TLM",
            "priority": 7,
            "sending": ["STEER"],
            "receiving": ["TLM"],
            "description": "Send a marker to telemetry",
            "contents": {
                "pump_speed": "float32"
            }
