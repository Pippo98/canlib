            "topic": "STEER",
            "priority": 5,
            "sending": ["DAS"],
            "receiving": ["STEER"],
            "description": "Encoder speed and inverter RPMs",
            "interval": 100,
            "contents": {
                "encoder_r": "uint16",
                "encoder_l": "uint16",
                "inverter_r": "uint16",
                "inverter_l": "uint16"
            }
        },
        {
            "name": "INV_L_SET_TORQUE",
            "fixed_id": 513,
            "sending": ["DAS"],
            "receiving": ["INVERTER_L"],
            "interval": 20,
            "contents": {
                "reg_id": "uint8",
                "lsb": "uint8",
                "msb": "uint8"
            }
        },
        {
