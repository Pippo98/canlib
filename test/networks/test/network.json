    "messages": [
        {
            "name": "STEER_VERSION",
            "topic": "BROADCAST",
            "priority": 3,
            "sending": ["STEER"],
            "receiving": ["DAS", "STEER"],
            "description": "periodic message containing current can definitions version",
            "interval": 1000,
            "contents": {
                "component_version": "uint8",
                "cancicd_version": "uint8"
            }
        },
        {
            "name": "DAS_VERSION",
            "topic": "BROADCAST",
            "priority": 3,
            "sending": ["DAS"],
            "receiving": ["DAS", "STEER"],
            "description": "periodic message containing current can definitions version",
            "interval": 1000,
            "contents": {
                "component_version": "uint8",
                "cancicd_version": "uint8"
            }
        },
        {
            "name": "HV_VERSION",
            "topic": "BROADCAST",
            "priority": 3,
            "sending": ["BMS_HW"],
            "receiving": ["DAS", "STEER"],
            "description": "periodic message containing current can definitions version",
            "interval": 1000,
            "contents": {
                "component_version": "uint8",
                "cancicd_version": "uint8"
            }
        },
        {
            "name": "LV_VERSION",
            "topic": "BROADCAST",
            "priority": 3,
            "sending": ["BMS_LW"],
            "receiving": ["DAS", "STEER"],
            "description": "periodic message containing current can definitions version",
            "interval": 1000,
            "contents": {
                "component_version": "uint8",
                "cancicd_version": "uint8"
            }
        },
        {
            "name": "TLM_VERSION",
            "topic": "BROADCAST",
            "priority": 3,
            "sending": ["TLM"],
            "receiving": ["DAS", "STEER"],
            "description": "periodic message containing current can definitions version",
            "interval": 1000,
            "contents": {
                "component_version": "uint8",
                "cancicd_version": "uint8"
            }
        },
        {
            "name": "TIMESTAMP",
            "topic": "BROADCAST",
            "priority": 6,
            "sending": ["TLM"],
            "receiving": ["STEER", "DAS", "BMS_HV", "BMS_LV"],
            "description": "every second unix encoded time and date used by logging devices to sync",
            "interval": 1000,
            "contents": {
                "timestamp": "uint32"
            }
        },
        {
            "name": "SET_TLM_STATUS",
            "topic": "TLM",
            "priority": 6,
            "sending": ["STEER"],
            "receiving": ["TLM"],
            "description": "Ask telemetry to turn on/off and send a tuple containing the current{test, driver, map); only once",
            "contents": {
                "tlm_status": "Toggle",
                "race_type": "RaceType",
                "driver": "uint8",
                "circuit": "uint8"
            }
        },
        {
            "name": "TLM_STATUS",
            "topic": "STEER",
            "priority": 6,
            "sending": ["TLM"],
            "receiving": ["STEER"],
            "description": "The answer to the steering wheel's message that changes the status of the telemetry",
            "interval": 1000,
            "contents": {
                "tlm_status": "Toggle",
                "race_type": "RaceType",
                "driver": "uint8",
                "circuit": "uint8"
            }
        },
        {
            "name": "STEER_SYSTEM_STATUS",
            "topic": "TLM",
            "priority": 0,
            "sending": ["STEER"],
            "receiving": ["TLM"],
            "description": "System stats of the raspberry pi inside the steering wheel",
            "interval": 2000,
            "contents": {
                "soc_temp": "uint8"
            }
        },
        {
            "name": "HV_VOLTAGE",
            "topic": "DASnSTEERnCART",
            "priority": 4,
            "sending": ["BMS_HV"],
            "receiving": ["DAS", "STEER", "HANDCART"],
            "description": "Pack stats",
            "interval": 20,
            "contents": {
                "pack_voltage": "uint16",
                "bus_voltage": "uint16",
                "max_cell_voltage": "uint16",
                "min_cell_voltage": "uint16"
            }
        },
        {
            "name": "HV_CURRENT",
            "topic": "DASnSTEERnCART",
            "priority": 4,
            "sending": ["BMS_HV"],
            "receiving": ["DAS", "STEER", "HANDCART"],
            "description": "Current supplied by the pack",
            "interval": 20,
            "contents": {
                "current": "uint16",
                "power": "int16"
            }
        },
        {
            "name": "HV_TEMP",
            "topic": "DASnSTEERnCART",
            "priority": 4,
            "sending": ["BMS_HV"],
            "receiving": ["DAS", "STEER", "HANDCART"],
            "description": "Cell temperatures",
            "interval": 200,
            "contents": {
                "average_temp": "uint16",
                "max_temp": "uint16",
                "min_temp": "uint16"
            }
        },
        {
            "name": "HV_ERRORS",
            "topic": "DASnSTEERnCART",
            "priority": 7,
            "sending": ["BMS_HV"],
            "receiving": ["DAS", "STEER", "HANDCART"],
            "description": "Battery-related errors",
            "interval": 20,
            "contents": {
                "warnings": "HvErrors",
                "errors": "HvErrors"
            }
        },
        {
            "name": "TS_STATUS",
            "topic": "DASnSTEERnCART",
            "priority": 7,
            "sending": ["BMS_HV"],
            "receiving": ["DAS", "STEER", "HANDCART"],
